<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.studentcalendar">

    <!-- Permiso para conexiÃ³n a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="KalendU"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Studentcalendar"
        tools:targetApi="31">

        <!-- PantallaDeCargaActivity como pantalla de inicio -->
        <activity
            android:name=".PantallaDeCargaActivity"
            android:exported="true">

        </activity>

        <!-- Otras actividades -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AjustesActivity"
            android:exported="false" />
        <activity
            android:name=".ExportarHorarioPdfActivity"
            android:exported="false" />
        <activity
            android:name=".NotificacionesActivity"
            android:exported="false" />
        <activity
            android:name=".VerTareasActivity"
            android:exported="false" />
        <activity
            android:name=".HorarioSemanalActivity"
            android:exported="true" />
        <activity
            android:name=".AnadirClaseTareaActivity"
            android:exported="false" />

    </application>
</manifest>
