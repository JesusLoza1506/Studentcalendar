<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="KalendU"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Studentcalendar"
        tools:targetApi="31">

        <!-- Provider para compartir archivos (PDF) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.studentcalendar.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Actividades de la app -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".MainActivity" android:exported="false" />
        <activity android:name=".AjustesActivity" android:exported="false" />
        <activity android:name=".ExportarHorarioPdfActivity" android:exported="false" />
        <activity android:name=".NotificacionesActivity" android:exported="false" />
        <activity android:name=".VerTareasActivity" android:exported="false" />
        <activity android:name=".HorarioSemanalActivity" android:exported="false" />
        <activity android:name=".AnadirClaseTareaActivity" android:exported="false" />

    </application>
</manifest>
